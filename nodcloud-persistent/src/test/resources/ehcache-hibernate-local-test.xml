<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="hibernateCache">

    <diskStore path="java.io.tmpdir/ehcache/nodcloud-test/hibernate"/>

    <!-- DefaultCache setting. -->
    <defaultCache eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
                  overflowToDisk="true"/>
    <!-- Special objects setting. -->
    <cache name="org.nodcloud.persistent.entity.User" eternal="true"
           overflowToDisk="true"/>
    <cache name="org.nodcloud.persistent.entity.User.roleList" eternal="true"
           overflowToDisk="true"/>
    <cache name="org.nodcloud.persistent.entity.Role"
           eternal="true" overflowToDisk="true"/>
</ehcache>
